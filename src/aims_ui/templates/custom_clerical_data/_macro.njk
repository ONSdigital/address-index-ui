{% macro customClericalData(params) %}

{% from "components/collapsible/_macro.njk" import onsCollapsible %}
{% from "components/table/_macro.njk" import onsTable %}

{# By setting the content, the onsTable is contained inside onsCollapsible #}

 {% set content %}
        {{ onsTable({
        "caption": "A basic table with a caption",
        "id": "basic-table",
        "ths": [
            { "value": "Column A" },
            { "value": "Column B" },
            { "value": "Column C" }  ],
        "trs": [
            { "tds": [
                    { "value": "Cell A1",
                      "name": "cell-name" },
                    { "value": "Cell B1" },
                    { "value": "Cell C1" } ]
            },
            { "tds": [
                    { "value": "Cell A2" },
                    { "value": "Cell B2" },
                    { "value": "Cell C2" } ]
            }
        ] }) }}
    {% endset %}

    {% call onsCollapsible({
            id: "collapsible",
            title: "Need to answer separately from your household?",
            titleTag: "h2",
            button: {
                "close": "Hide this",
                "contextSuffix": "content"
            }
        })
    %}
        {{ content | safe }}
    {% endcall %}


{% endmacro %}
